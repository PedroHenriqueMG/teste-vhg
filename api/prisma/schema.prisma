// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ActivityIntensity {
  LOW
  MEDIUM
  HIGH
}

model User {
  id           String   @id
  name         String
  email        String   @unique
  password     String
  createdAt    DateTime
  updatedAt    DateTime @updatedAt
  activity         Activity[]
}

model Activity {
  id           String   @id
  user         User     @relation(fields: [user_id], references: [id])
  user_id      String   
  name         String
  intensity    ActivityIntensity
  duration     String
  createdAt    DateTime
  updatedAt    DateTime @updatedAt
}